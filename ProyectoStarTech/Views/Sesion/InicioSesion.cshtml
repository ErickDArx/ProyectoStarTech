@model ProyectoStarTech.Usuario

@{
    ViewBag.Title = "InicioSesion";
}

<nav aria-label="breadcrumb shadow p-3 mb-5 bg-white rounded" class="mt-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Inicio", "Index", "Index")</li>
        <li class="breadcrumb-item active" aria-current="page">Inicio de Sesión</li>
    </ol>
</nav>

<div class="card mb-3" >
    <div class="row no-gutters">
        <div class="col-md-8">
            <img src="https://image.freepik.com/vector-gratis/diseno-fondo-abstracto-formas-fluidas-mucho-color_23-2148237986.jpg" class="card-img" alt="...">
            <div class="product-device shadow-sm d-none d-md-block"></div>
            
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">Inicio de Sesion</h5>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal row">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="col-md-12 mb-3">

                    <label for="">Correo</label>
                    @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control", @placeholder = "micorreo@gmail.com", @id = "correo", type = "email", @style = "max-width: 100%" } })
                    @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })

                </div>


                <div class="col-md-12 mb-3">
                    <label>Contraseña</label>
                    @Html.EditorFor(model => model.contraseña, new { htmlAttributes = new { @class = "form-control", @placeholder = "****************", @style = "max-width: 100%", Type = "password" } })
                    @Html.ValidationMessageFor(model => model.contraseña, "", new { @class = "text-danger" })
                </div>



                    <div class="col-md-12 mb-2">
                        <input type="submit" class="btn btn-primary btn-block" value="Iniciar Sesión" />
                    </div>

                    <div class="col-md-12 mt-2">
                        <a href="@Url.Action("RegistroUsuario","Registro")" class="btn btn-dark btn-block"><h6>Crea tu cuenta de Star Technology</h6></a>
                    </div>
            </div>

            

                }

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("/JavaScripts/Login.js")
}

