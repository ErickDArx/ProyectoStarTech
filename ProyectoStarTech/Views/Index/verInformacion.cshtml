@model ProyectoStarTech.productos

@{
    ViewBag.Title = "verInformacion";
}

<nav aria-label="breadcrumb" class="mt-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item "> <a href="">Pagina de Inicio</a> </li>
        <li class="breadcrumb-item active" aria-current="page">@Model.nombreProducto</li>
    </ol>
</nav>

<div class="card mb-3 border-primary">
    <div class="row no-gutters">
        <div class="col-md-4 border">
            <img src="@Model.imagenUrl" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body border-primary">
                <h5 class="card-title card-header bg-info">@Model.nombreProducto</h5>
                <p class="card-text card-header border-info border">Cantidad disponible : @Model.cantidadDisponible</p>
                <p class="card-text card-header border-info border">Precio : @Model.precioProducto</p>
                <p class="card-text card-footer border border-info"><small class="text-muted">Codigo de producto: @Model.codigoProducto</small></p>


                <div class="form-group">
                    <label for="exampleFormControlSelect1">Selecione la cantidad que desea comprar</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>@Model.cantidadDisponible</option>
                    </select>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    <input type="submit" class="btn btn-success" id="btnAnadir" name="submit" value="Añadir al carrito" />
                    //Este boton debe redirigir al carrito
                }
                else
                {
                    <button class="btn btn-success btn-block disabled" onclick="alert1()">Añadir al carrito</button>
                }


            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    @Scripts.Render("/JavaScripts/Compra.js")
    }